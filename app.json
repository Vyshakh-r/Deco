{
  "expo": {
    "name": "Deco",
    "scheme": ["deco"],           
    "androidStatusBar": {
      "backgroundColor": "#00000000", 
      "translucent": true,
      "barStyle": "light-content"
    },
    "assetBundlePatterns": ["**/*"],
    "slug": "deco",                 
    "plugins": ["expo-router"],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "newArchEnabled": true,
      "EXPO_USE_NEW_ARCH": "true",
      "router": {
        "origin": false
      }
    }
  }
}
